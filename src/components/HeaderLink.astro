---
const { href } = Astro.props;
const isActive =
  Astro.url.pathname === href ||
  (href !== "/" && Astro.url.pathname.startsWith(href));
---

<a href={href} class:list={["nav-seg", isActive && "active"]}>
  <span class="nav-text"><slot /></span>
</a>

<style>
  .nav-seg{
    position: relative;
    display:flex;
    align-items:center;
    justify-content:center;
    padding: .45rem .75rem;
    border-radius: 0;
    text-decoration:none;
    border: none;
    opacity: .88;
    transition: opacity .15s ease, filter .15s ease, background .15s ease;
    min-height: 34px;
  }

  .nav-seg:hover{
    opacity: 1;
    filter: drop-shadow(0 0 10px rgba(180,120,255,0.20));
    background: rgba(255,255,255,0.03);
  }

  .active{
    opacity: 1;
    background: rgba(255,255,255,0.05);
  }

  .nav-text{
    display:inline-block;
    padding: 0 .15rem;
    text-align:center;
    white-space: nowrap;
  }
</style>
