---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

const TOS_URL = "https://docs.google.com/document/d/1C3_UK_zj8uqMqW30PzZPe3SuW9PgLx-STpQGwHpyFEA/edit?usp=sharing";
const AVATARS_URL = "https://docs.google.com/document/d/1BTdyo2qLl1mm_pQfx9sHNoN1EShEDTM1CKbwW0IR2E4/edit?usp=sharing";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} • Commissions`} description="Commission info + request form." />
  </head>
  <body>
    <Header />

    <main class="page-shell">
      <header class="page-head neon-card proximity-glow">
        <div class="glow-spot"></div>
        <h1>Commissions</h1>
        <p>Request custom work — please include references and details.</p>

        <p style="margin-top: 0.75rem; opacity: 0.9;">
          <a class="underline-soft" href={TOS_URL} target="_blank" rel="noreferrer">Commission TOS</a>
          <span style="opacity:0.7;"> • </span>
          <a class="underline-soft" href={AVATARS_URL} target="_blank" rel="noreferrer">Avatars I Own</a>
        </p>
      </header>

      <section class="section-grid">
        <article class="neon-card proximity-glow">
          <div class="glow-spot"></div>
          <h2>What I do</h2>
          <ul class="list-tight">
            <li>Artwork / icons / branding graphics</li>
            <li>VRChat retextures / edits</li>
            <li>VRChat accessory edits / clothing refits</li>
            <li>Terraria mod assets / sprites</li>
            <li>Blender / 3D work</li>
            <li>Other requests (ask!)</li>
          </ul>
        </article>

        <article class="neon-card proximity-glow">
          <div class="glow-spot"></div>
          <h2>Quick links</h2>
          <ul class="list-tight">
            <li><a href="https://rainbowscreations.gumroad.com/" target="_blank" rel="noreferrer">Gumroad</a></li>
            <li><a href="https://jinxxy.com/rainbowvis" target="_blank" rel="noreferrer">Jinxxy</a></li>
            <li><a href="https://ko-fi.com/rainbow_vis" target="_blank" rel="noreferrer">Ko-fi</a></li>
            <li><a href="https://discord.com/invite/xYczE7TSMv" target="_blank" rel="noreferrer">Discord</a></li>
          </ul>
        </article>
      </section>

      <section class="neon-card proximity-glow" style="margin-top: 1rem;">
        <div class="glow-spot"></div>
        <h2>Commission Request Form</h2>
        <p style="opacity: 0.9; margin-top: 0.25rem;">
          This sends directly to RainbowVis and includes your uploaded images as secure links.
        </p>

        <form class="form-grid" action="/api/commission" method="POST" enctype="multipart/form-data">
          <input class="input" type="text" name="name" placeholder="Name / Handle" required />
          <input class="input" type="email" name="reply_to" placeholder="Your email (so I can reply)" required />

          <select class="input" name="commission_type" required>
            <option value="" disabled selected>Commission Type (choose one)</option>
            <option value="VRChat Retexture">VRChat Retexture</option>
            <option value="VRChat Accessory / Clothing Refit">VRChat Accessory / Clothing Refit</option>
            <option value="Icon / Branding Art">Icon / Branding Art</option>
            <option value="Terraria Mod Asset / Sprite">Terraria Mod Asset / Sprite</option>
            <option value="Blender / 3D">Blender / 3D</option>
            <option value="Other">Other</option>
          </select>

          <textarea class="textarea" name="details" placeholder="Describe what you want!" required></textarea>

          <div class="neon-card" style="padding: 0.85rem; background: rgba(255,255,255,0.03);">
            <div style="opacity: 0.9; margin-bottom: 0.5rem; font-weight: 700;">Upload references (optional)</div>
            <input class="input" type="file" name="files" accept="image/*" multiple />
            <div style="opacity: 0.75; margin-top: 0.45rem; font-size: 0.95rem;">
              You can select multiple images.
            </div>
          </div>

          <button class="button" type="submit">Send Request</button>
        </form>
      </section>
    </main>

    <Footer />
    <script src="/proximityGlow.js" defer></script>
  </body>
</html>
