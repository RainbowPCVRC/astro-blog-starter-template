---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

const contacts = [
  { label: "Discord", value: "rainbow_vis", href: "https://discord.com/invite/xYczE7TSMv", icon: "discord" },
  { label: "VRChat", value: "Rainbow_Vis", href: "https://vrchat.com/home/user/", icon: "vrchat" },
  { label: "Gmail", value: "rainbowvis.co@gmail.com", href: "mailto:rainbowvis.co@gmail.com", icon: "gmail" },
  { label: "Twitter/X", value: "@RainbowVis", href: "https://x.com/Rainbow_Vis?s=20", icon: "x" },
  { label: "Bluesky", value: "@rainbowvis.bsky.social", href: "https://bsky.app/profile/rainbowvis.bsky.social", icon: "bsky" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} • Contact`} description="Contact RainbowVis" />
  </head>
  <body>
    <Header />

    <main class="page-shell">
      <header class="page-head neon-card proximity-glow">
        <div class="glow-spot"></div>
        <h1>Contact</h1>
        <p>These are my official contact methods.</p>
      </header>

      <section class="contact-grid">
        {contacts.map((c) => (
          <a class="neon-card proximity-glow contact-card" href={c.href} target={c.href.startsWith("http") ? "_blank" : undefined} rel="noreferrer">
            <div class="glow-spot"></div>

            <div class="contact-row">
              <span class="contact-icon" aria-hidden="true">
                {c.icon === "discord" && (
                  <svg viewBox="0 0 24 24" fill="none">
                    <path d="M9.5 13.2h.01M14.5 13.2h.01" stroke="currentColor" stroke-width="2.4" stroke-linecap="round"/>
                    <path d="M8 7c1.2-.8 2.6-1.2 4-1.2S14.8 6.2 16 7" stroke="currentColor" stroke-width="1.7" stroke-linecap="round"/>
                    <path d="M7.5 8.2c-1.3 2.6-1.7 5.3-1.5 8.3 0 0 2 1.5 6 1.5s6-1.5 6-1.5c.2-3-.2-5.7-1.5-8.3" stroke="currentColor" stroke-width="1.7" stroke-linecap="round"/>
                    <path d="M7 18c2.6 1 7.4 1 10 0" stroke="currentColor" stroke-width="1.7" stroke-linecap="round"/>
                  </svg>
                )}
                {c.icon === "gmail" && (
                  <svg viewBox="0 0 24 24" fill="none">
                    <path d="M4 6h16v12H4V6Z" stroke="currentColor" stroke-width="1.7"/>
                    <path d="M4.5 7l7.5 6 7.5-6" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                )}
                {c.icon === "x" && (
                  <svg viewBox="0 0 16 16" fill="none">
                    <path fill="currentColor" d="M9.522 6.774 15.255 0h-1.36L8.92 5.88 4.955 0H.37l6.01 8.92L.37 16h1.36l5.253-6.207L11.164 16h4.586L9.522 6.774Zm-1.85 2.186-.61-.874-4.86-6.96h2.09l3.92 5.615.61.874 5.1 7.3h-2.09l-4.16-5.955Z"/>
                  </svg>
                )}
                {c.icon === "bsky" && (
                  <svg viewBox="0 0 24 24" fill="none">
                    <path fill="currentColor" d="M12 11.4c-.7-1.3-2.7-4-4.4-5.2C5.9 4.9 5.2 5 4.7 5.2c-.6.3-.7 1-.6 1.6.2 1.6 1.6 3.5 3 4.8-1.3-.2-3-.1-4 .6-.5.4-.7 1-.6 1.6.2 1.5 2 2.4 3.3 2.7 1.8.4 3.4.1 4.5-.7.4.3.8.5 1.1.7.3-.2.7-.4 1.1-.7 1.1.8 2.7 1.1 4.5.7 1.3-.3 3.1-1.2 3.3-2.7.1-.6-.1-1.2-.6-1.6-1-.7-2.7-.8-4-.6 1.4-1.3 2.8-3.2 3-4.8.1-.6 0-1.3-.6-1.6-.5-.2-1.2-.3-2.9 1-1.7 1.2-3.7 3.9-4.4 5.2Z"/>
                  </svg>
                )}
                {c.icon === "vrchat" && (
                  <svg viewBox="0 0 24 24" fill="none">
                    <path d="M7 8h10v8H7V8Z" stroke="currentColor" stroke-width="1.7"/>
                    <path d="M9 10h6" stroke="currentColor" stroke-width="1.7" stroke-linecap="round"/>
                    <path d="M9 14h6" stroke="currentColor" stroke-width="1.7" stroke-linecap="round"/>
                  </svg>
                )}
              </span>

              <div>
                <div class="contact-label">{c.label}</div>
                <div class="contact-value">{c.value} <span class="arrow">→</span></div>
              </div>
            </div>
          </a>
        ))}
      </section>
    </main>

    <Footer />
    <script src="/proximityGlow.js" defer></script>
  </body>
</html>
