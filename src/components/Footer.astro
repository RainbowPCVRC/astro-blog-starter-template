<style>
  .site-footer{
    padding: 2.25rem 1rem 3rem;
    text-align:center;
    opacity: .9;
  }
  .footer-inner{
    max-width: 1100px;
    margin: 0 auto;
    display:flex;
    flex-direction:column;
    gap: .75rem;
    align-items:center;
  }
  .footer-links{
    display:flex;
    gap:.6rem;
    flex-wrap:wrap;
    justify-content:center;
  }
  .footer-links a{
    border-bottom: 1px solid rgba(255,255,255,0.18);
  }
  .footer-links a:hover{
    border-bottom-color: rgba(255,255,255,0.55);
  }
  .sep{ opacity:.55; }
