---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Gallery" description="Artwork, products, mods, VRChat, and more.">
  <main class="page-shell">
    <section class="neon-card">
      <h1 class="neon-title">Gallery</h1>
      <p class="neon-subtitle">Artwork, products, mods, VRChat, and more.</p>
    </section>

    <section class="neon-grid" aria-label="Gallery categories">
      <a class="neon-card" href="#" data-empty>
        <span class="tag">Mods</span>
        <h2>Terraria Mods</h2>
        <p class="neon-subtitle">Weapon mods, Utility mods, and other types mods!</p>
      </a>

      <a class="neon-card" href="#" data-empty>
        <span class="tag">VRChat</span>
        <h2>VRChat Retextures / Avatars</h2>
        <p class="neon-subtitle">VRChat textures for various amounts of avatars!</p>
      </a>

      <a class="neon-card" href="#" data-empty>
        <span class="tag">Art</span>
        <h2>Icon / Branding Art</h2>
        <p class="neon-subtitle">Icons, Logos, and Graphics!</p>
      </a>

      <a class="neon-card" href="#" data-empty>
        <span class="tag">3D</span>
        <h2>3D / Blender Work</h2>
        <p class="neon-subtitle">Renders, Models, and all sorts of shenanigans!</p>
      </a>

      <a class="neon-card" href="#" data-empty>
        <span class="tag">Audio</span>
        <h2>FNF / Audio Work</h2>
        <p class="neon-subtitle">Chromatics, Instrumentals, and all other types of sound design!</p>
      </a>
    </section>
  </main>

  <!-- Empty modal -->
  <div class="modal-backdrop" id="emptyModal" aria-hidden="true">
    <div class="modal-card" role="dialog" aria-modal="true" aria-labelledby="emptyTitle">
      <div class="modal-row">
        <img class="modal-sona" src="/images/rainbow-sona.png" alt="RainbowVis sona" />
        <div class="modal-text">
          <h2 id="emptyTitle">There is nothing here yet! Wait until a site update comes out!</h2>
          <p>These pages will be filled over time as new updates get published.</p>
        </div>
      </div>
      <div class="modal-actions">
        <button class="modal-btn" type="button" id="closeEmptyModal">Close</button>
      </div>
    </div>
  </div>

  <script>
    const modal = document.getElementById("emptyModal");
    const closeBtn = document.getElementById("closeEmptyModal");
    const openers = document.querySelectorAll("[data-empty]");

    function openModal(e) {
      e.preventDefault();
      modal.classList.add("show");
      modal.setAttribute("aria-hidden", "false");
    }
    function closeModal() {
      modal.classList.remove("show");
      modal.setAttribute("aria-hidden", "true");
    }

    openers.forEach((el) => el.addEventListener("click", openModal));
    closeBtn.addEventListener("click", closeModal);
    modal.addEventListener("click", (e) => {
      if (e.target === modal) closeModal();
    });
    window.addEventListener("keydown", (e) => {
      if (e.key === "Escape") closeModal();
    });
  </script>
</BaseLayout>
