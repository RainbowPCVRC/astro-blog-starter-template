<style>
	.rv-header{
		margin: 0;
		padding: 0.2rem 1rem;
		background: rgba(14, 8, 24, 0.85);
		border-bottom: 1px solid rgba(255,255,255,0.10);
		backdrop-filter: blur(10px);
	}
	.rv-nav{
		display:flex;
		align-items:center;
		justify-content:space-between;
		gap: 1rem;
	}
	.rv-title{
		margin:0;
		font-size: 1rem;
		letter-spacing: 0.2px;
	}
	.rv-title a{
		color: rgba(234,230,255,0.95);
		text-decoration:none;
	}

	nav :global(a){
		padding: 0.9rem 0.55rem;
		color: rgba(234,230,255,0.82);
		text-decoration:none;
		border-bottom: 3px solid transparent;
	}

	nav :global(a:hover){
		color: rgba(234,230,255,0.98);
	}

	nav :global(a.active){
		border-bottom-color: rgba(180,120,255,0.85);
		color: rgba(234,230,255,0.98);
	}

	.social-links{
		display:flex;
		align-items:center;
		gap: 0.4rem;
	}
	.social-links a{
		display:grid;
		place-items:center;
		width: 38px;
		height: 38px;
		border-radius: 12px;
		background: rgba(255,255,255,0.04);
		border: 1px solid rgba(255,255,255,0.10);
		color: rgba(234,230,255,0.92);
		box-shadow: 0 0 18px rgba(170,120,255,0.14);
	}
	.social-links a:hover{
		border-color: rgba(255,255,255,0.18);
	}

	@media (max-width: 840px){
		.social-links{ display:none; }
	}
</style>
