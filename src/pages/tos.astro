---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE_TITLE } from "../consts";
---

<BaseLayout title={`${SITE_TITLE} • T.O.S / Avatars I Own`} description="Terms of service and avatars I own.">
  <section class="container">
    <div class="neon-card proximity-glow" style="padding: 1.25rem;">
      <h1 style="margin:0;">T.O.S / Avatars I Own</h1>
      <p style="margin:.35rem 0 0; opacity:.9;">
        Terms of Service + Avatar ownership list (kept up to date).
      </p>
    </div>

    <div class="neon-grid" style="margin-top: 1rem;">
      <div class="neon-card proximity-glow" style="padding: 1.1rem;">
        <h2 style="margin:0;">Terms of Service</h2>
        <p style="margin:.35rem 0 0; opacity:.9;">
          Add your commission rules here (payment, refunds, revisions, allowed content, etc.).
        </p>
      </div>

      <div class="neon-card proximity-glow" style="padding: 1.1rem;">
        <h2 style="margin:0;">Avatars I Own</h2>
        <p style="margin:.35rem 0 0; opacity:.9;">
          List your purchased avatars + proof/notes here so it’s easy for clients to verify.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
