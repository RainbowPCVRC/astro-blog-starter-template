---
const path = Astro.url.pathname;
const isActive = (href: string) => path === href || path === `${href}index.html`;
---

<header class="site-header">
  <div class="navbar">
    <a class="brand" href="/">
      <img src="/images/siteicon.png" alt="" />
      <span class="brand-text">Rainbow’s Creations</span>
    </a>

    <nav class="internal-links" aria-label="Primary navigation">
      <a href="/" aria-current={isActive("/") ? "page" : undefined}>Home</a>
      <span class="divider" aria-hidden="true"></span>

      <a href="/gallery/" aria-current={isActive("/gallery/") ? "page" : undefined}>Gallery</a>
      <span class="divider" aria-hidden="true"></span>

      <a href="/products/" aria-current={isActive("/products/") ? "page" : undefined}>Products</a>
      <span class="divider" aria-hidden="true"></span>

      <a href="/commissions/" aria-current={isActive("/commissions/") ? "page" : undefined}>Commissions</a>
      <span class="divider" aria-hidden="true"></span>

      <a href="/wips/" aria-current={isActive("/wips/") ? "page" : undefined}>W.I.P’s</a>
      <span class="divider" aria-hidden="true"></span>

      <a href="/updates/" aria-current={isActive("/updates/") ? "page" : undefined}>Updates</a>
      <span class="divider" aria-hidden="true"></span>

      <a href="/tos/" aria-current={isActive("/tos/") ? "page" : undefined}>T.O.S / Avatars I Own</a>
      <span class="divider" aria-hidden="true"></span>

      <a href="/contact/" aria-current={isActive("/contact/") ? "page" : undefined}>Contacts</a>
    </nav>

    <div class="social-links">
      <a class="icon-btn" href="https://bsky.app/profile/rainbowvis.bsky.social" target="_blank" rel="noreferrer">
        <img src="/icons/bluesky.png" alt="Bluesky" />
      </a>
      <a class="icon-btn" href="https://x.com/Rainbow_Vis" target="_blank" rel="noreferrer">
        <img src="/icons/twitter.png" alt="Twitter/X" />
      </a>
      <a class="icon-btn" href="https://www.twitch.tv/rainbowvis" target="_blank" rel="noreferrer">
        <img src="/icons/twitch.png" alt="Twitch" />
      </a>
      <a class="icon-btn" href="https://discord.gg/" target="_blank" rel="noreferrer">
        <img src="/icons/discord.png" alt="Discord" />
      </a>
    </div>
  </div>
</header>
