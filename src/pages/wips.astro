---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="W.I.P's" description="Work in progress projects and upcoming updates.">
  <main class="page-shell">
    <section class="neon-card">
      <h1 class="neon-title">W.I.P's</h1>
      <p class="neon-subtitle">Work in progress projects and upcoming updates.</p>
    </section>

    <section class="neon-grid" aria-label="WIP categories">
      <a class="neon-card" href="#" data-empty>
        <span class="tag">Mods</span>
        <h2>Terraria Mod Updates</h2>
        <p class="neon-subtitle">Upcoming items, vanity sets, and effects.</p>
      </a>

      <a class="neon-card" href="#" data-empty>
        <span class="tag">VRChat</span>
        <h2>VRChat Retexture Experiments</h2>
        <p class="neon-subtitle">New variants & shader tests.</p>
      </a>

      <a class="neon-card" href="#" data-empty>
        <span class="tag">Site</span>
        <h2>Website + Branding</h2>
        <p class="neon-subtitle">New layouts, icons, and polish passes.</p>
      </a>

      <a class="neon-card" href="#" data-empty>
        <span class="tag">Audio</span>
        <h2>Audio / FNF</h2>
        <p class="neon-subtitle">Chromatics, SFX, and new mixes.</p>
      </a>
    </section>
  </main>

  <!-- Empty modal -->
  <div class="modal-backdrop" id="emptyModal" aria-hidden="true">
    <div class="modal-card" role="dialog" aria-modal="true" aria-labelledby="emptyTitle">
      <div class="modal-row">
        <img class="modal-sona" src="/images/rainbow-sona.png" alt="RainbowVis sona" />
        <div class="modal-text">
          <h2 id="emptyTitle">There is nothing here yet! Wait until a site update comes out!</h2>
          <p>These pages will be filled over time as new updates get published.</p>
        </div>
      </div>
      <div class="modal-actions">
        <button class="modal-btn" type="button" id="closeEmptyModal">Close</button>
      </div>
    </div>
  </div>

  <script>
    const modal = document.getElementById("emptyModal");
    const closeBtn = document.getElementById("closeEmptyModal");
    const openers = document.querySelectorAll("[data-empty]");

    function openModal(e) {
      e.preventDefault();
      modal.classList.add("show");
      modal.setAttribute("aria-hidden", "false");
    }
    function closeModal() {
      modal.classList.remove("show");
      modal.setAttribute("aria-hidden", "true");
    }

    openers.forEach((el) => el.addEventListener("click", openModal));
    closeBtn.addEventListener("click", closeModal);
    modal.addEventListener("click", (e) => {
      if (e.target === modal) closeModal();
    });
    window.addEventListener("keydown", (e) => {
      if (e.key === "Escape") closeModal();
    });
  </script>
</BaseLayout>
