---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Request Sent!" description="Your commission request has been sent.">
  <section class="container">
    <div class="neon-card proximity-glow" style="padding: 18px;">
      <div class="glow-spot"></div>

      <h1 style="margin: 0 0 10px 0;">✅ Request sent!</h1>
      <p style="margin: 0; opacity: .92;">
        Thanks! Your commission request was submitted successfully.
      </p>

      <p style="margin: 14px 0 0 0; opacity: .9;">
        Returning you back automatically…
      </p>

      <p style="margin: 12px 0 0 0;">
        <a class="neon-link" href="/commissions">Go back to Commissions</a>
      </p>
    </div>
  </section>

  <!-- Client-only redirect back (SSR safe) -->
  <script is:inline>
    (() => {
      if (typeof window === "undefined") return;

      // Give the user a moment to read the success message.
      setTimeout(() => {
        // If there is a previous page in history, go back.
        if (window.history.length > 1) {
          window.history.back();
          return;
        }
        // Fallback if they landed here directly:
        window.location.href = "/commissions";
      }, 2500);
    })();
  </script>
</BaseLayout>
