---
import BaseLayout from "../layouts/BaseLayout.astro";
import { LINKS, TWITCH_CHANNEL } from "../consts";
---

<BaseLayout title="Home">
  <main class="home-shell">
    <section class="home-main">
      <header class="home-hero neon-card proximity-glow">
        <div class="glow-spot"></div>
        <h1 class="home-title">RainbowVis</h1>
        <p class="home-subtitle">Gallery • Products • Commissions • Community</p>
      </header>

      <section class="neon-grid">
        <a class="neon-card proximity-glow" href="/gallery">
          <div class="glow-spot"></div>
          <div class="card-title-row">
            <span class="card-ico"><img class="icon-img" src="/icons/gallery.svg" alt="" /></span>
            <h2>Gallery</h2>
          </div>
          <p>Artwork, mods, showcases, and featured pieces.</p>
        </a>

        <a class="neon-card proximity-glow" href="/commissions">
          <div class="glow-spot"></div>
          <div class="card-title-row">
            <span class="card-ico"><img class="icon-img" src="/icons/form.svg" alt="" /></span>
            <h2>Commissions</h2>
          </div>
          <p>Request custom work (form + info).</p>
        </a>

        <a class="neon-card proximity-glow" href={LINKS.gumroad} target="_blank" rel="noreferrer">
          <div class="glow-spot"></div>
          <div class="card-title-row">
            <span class="card-ico"><img class="icon-img" src="/icons/gumroad.svg" alt="" /></span>
            <h2>Gumroad</h2>
          </div>
          <p>Digital products & downloads.</p>
        </a>

        <a class="neon-card proximity-glow" href={LINKS.jinxxy} target="_blank" rel="noreferrer">
          <div class="glow-spot"></div>
          <div class="card-title-row">
            <span class="card-ico"><img class="icon-img" src="/icons/jinxxy.svg" alt="" /></span>
            <h2>Jinxxy</h2>
          </div>
          <p>VRChat-related items & listings.</p>
        </a>

        <a class="neon-card proximity-glow" href={LINKS.kofi} target="_blank" rel="noreferrer">
          <div class="glow-spot"></div>
          <div class="card-title-row">
            <span class="card-ico"><img class="icon-img" src="/icons/kofi.svg" alt="" /></span>
            <h2>Ko-fi</h2>
          </div>
          <p>Support me + extras.</p>
        </a>
      </section>

      <section class="neon-card proximity-glow" style="margin-top: 1rem;">
        <div class="glow-spot"></div>
        <div class="card-title-row">
          <span class="card-ico"><img class="icon-img" src="/icons/social.svg" alt="" /></span>
          <h2>Socials</h2>
        </div>
        <div class="social-grid">
          <a class="chip" href={LINKS.bluesky} target="_blank" rel="noreferrer">
            <img class="icon-img" src="/icons/bluesky.svg" alt="" /> Bluesky
          </a>
          <a class="chip" href={LINKS.twitter} target="_blank" rel="noreferrer">
            <img class="icon-img" src="/icons/twitter.svg" alt="" /> Twitter / X
          </a>
          <a class="chip" href={LINKS.youtube} target="_blank" rel="noreferrer">
            <img class="icon-img" src="/icons/youtube.svg" alt="" /> YouTube
          </a>
          <a class="chip" href={LINKS.twitch} target="_blank" rel="noreferrer">
            <img class="icon-img" src="/icons/twitch.svg" alt="" /> Twitch
          </a>
          <a class="chip" href={LINKS.discordInvite} target="_blank" rel="noreferrer">
            <img class="icon-img" src="/icons/discord.svg" alt="" /> Discord Invite
          </a>
        </div>
      </section>
    </section>

    <aside class="home-side">
      <div class="neon-card proximity-glow">
        <div class="glow-spot"></div>
        <h2 style="margin:0;">RainbowVis's Discord Community</h2>
        <p style="opacity:.9; margin:.5rem 0 .75rem;">Join The Skittle Bag (+18) Discord Community!</p>

        <div class="discord-frame-wrap">
          <iframe
            src="https://discord.com/widget?id=1318693081574543380&theme=dark"
            width="350"
            height="500"
            allowtransparency="true"
            frameborder="0"
            sandbox="allow-popups allow-popups-to-escape-sandbox allow-same-origin allow-scripts"
            loading="lazy"
            title="RainbowVis Discord Widget"
          ></iframe>
        </div>
      </div>

      <!-- NEW: Twitch embed under Discord widget -->
      <div class="neon-card proximity-glow" style="margin-top: 1rem;">
        <div class="glow-spot"></div>
        <div class="card-title-row">
          <span class="card-ico"><img class="icon-img" src="/icons/twitch.svg" alt="" /></span>
          <h2 style="margin:0;">Twitch Livestream</h2>
        </div>
        <p style="opacity:.9; margin:.5rem 0 .75rem;">Shows live when I’m streaming.</p>

        <div class="discord-frame-wrap">
          <iframe
            id="twitchPlayer"
            width="100%"
            height="220"
            frameborder="0"
            allowfullscreen="true"
            scrolling="no"
            title="Twitch player"
          ></iframe>
        </div>

        <script is:inline>
          (() => {
            if (typeof window === "undefined") return;
        
            const channel = "{TWITCH_CHANNEL}";
            const parent = window.location.hostname;
            const src = `https://player.twitch.tv/?channel=${channel}&parent=${parent}&muted=true`;
        
            const el = document.getElementById("twitchPlayer");
            if (el) el.src = src;
          })();
        </script>
      </div>
    </aside>
  </main>

  <style>
    .card-title-row{ display:flex; align-items:center; gap:.6rem; }
    .card-title-row h2{ margin:0; }
    .card-ico{
      display:inline-flex;
      width: 34px; height: 34px;
      align-items:center; justify-content:center;
      border-radius: 12px;
      background: rgba(255,255,255,0.05);
      border: 1px solid rgba(255,255,255,0.08);
      flex: 0 0 auto;
    }
  </style>
</BaseLayout>
