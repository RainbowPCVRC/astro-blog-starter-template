---
import BaseLayout from "../layouts/BaseLayout.astro";
import { LINKS } from "../consts";

const icon = (src: string, fallback: string) => `
  <img class="icon-img" src="${src}" alt=""
    onerror="this.style.display='none'; this.nextElementSibling.style.display='inline-flex';" />
  <span class="icon-fallback">${fallback}</span>
`;
---

<BaseLayout title="Home">
  <main class="home-shell">
    <section class="home-main">
      <header class="home-hero neon-card proximity-glow">
        <div class="glow-spot"></div>
        <h1 class="home-title">RainbowVis</h1>
        <p class="home-subtitle">Gallery â€¢ Products â€¢ Commissions â€¢ Community</p>
      </header>

      <section class="neon-grid home-grid">
        <a class="neon-card proximity-glow" href="/gallery">
          <div class="glow-spot"></div>
          <div class="card-title-row">
            <span class="card-ico" set:html={icon("/icons/gallery.svg","ðŸ–¼ï¸")}></span>
            <h2>Gallery</h2>
          </div>
          <p>Artwork, mods, showcases, and featured pieces.</p>
        </a>

        <a class="neon-card proximity-glow" href="/commissions">
          <div class="glow-spot"></div>
          <div class="card-title-row">
            <span class="card-ico" set:html={icon("/icons/form.svg","ðŸ“")}></span>
            <h2>Commissions</h2>
          </div>
          <p>Request custom work (form + info).</p>
        </a>

        <a class="neon-card proximity-glow" href={LINKS.gumroad} target="_blank" rel="noreferrer">
          <div class="glow-spot"></div>
          <div class="card-title-row">
            <span class="card-ico" set:html={icon("/icons/gumroad.svg","ðŸ§¾")}></span>
            <h2>Gumroad</h2>
          </div>
          <p>Digital products & downloads.</p>
        </a>

        <a class="neon-card proximity-glow" href={LINKS.jinxxy} target="_blank" rel="noreferrer">
          <div class="glow-spot"></div>
          <div class="card-title-row">
            <span class="card-ico" set:html={icon("/icons/jinxxy.svg","ðŸ”—")}></span>
            <h2>Jinxxy</h2>
          </div>
          <p>VRChat-related items & listings.</p>
        </a>

        <a class="neon-card proximity-glow" href={LINKS.kofi} target="_blank" rel="noreferrer">
          <div class="glow-spot"></div>
          <div class="card-title-row">
            <span class="card-ico" set:html={icon("/icons/kofi.svg","â˜•")}></span>
            <h2>Ko-fi</h2>
          </div>
          <p>Support me + extras.</p>
        </a>

        <!-- âœ… NEW: About Me card (fills your empty slot) -->
        <a class="neon-card proximity-glow" href="/about">
          <div class="glow-spot"></div>
          <div class="card-title-row">
            <span class="card-ico" set:html={icon("/icons/about.svg","ðŸ‘¤")}></span>
            <h2>About Me</h2>
          </div>
          <p>Who I am + what I do.</p>
        </a>
      </section>

      <section class="neon-card proximity-glow social-panel">
        <div class="glow-spot"></div>
        <div class="card-title-row">
          <span class="card-ico" set:html={icon("/icons/social.svg","âœ¨")}></span>
          <h2>Socials</h2>
        </div>
        <div class="social-grid">
          <a class="chip" href={LINKS.bluesky} target="_blank" rel="noreferrer">
            <span set:html={icon("/icons/bluesky.svg","ðŸ¦‹")}></span> Bluesky
          </a>
          <a class="chip" href={LINKS.twitter} target="_blank" rel="noreferrer">
            <span set:html={icon("/icons/twitter.svg","ð•")}></span> Twitter / X
          </a>
          <a class="chip" href={LINKS.youtube} target="_blank" rel="noreferrer">
            <span set:html={icon("/icons/youtube.svg","â–¶")}></span> YouTube
          </a>
          <a class="chip" href={LINKS.twitch} target="_blank" rel="noreferrer">
            <span set:html={icon("/icons/twitch.svg","âŒ")}></span> Twitch
          </a>
          <a class="chip" href={LINKS.discordInvite} target="_blank" rel="noreferrer">
            <span set:html={icon("/icons/discord.svg","âŒ—")}></span> Discord Invite
          </a>
        </div>
      </section>
    </section>

    <aside class="home-side">
      <div class="neon-card proximity-glow discord-card">
        <div class="glow-spot"></div>
        <h2 class="discord-title">RainbowVis's Discord Community</h2>
        <p class="discord-subtitle">Join The Skittle Bag (+18) Discord Community!</p>

        <div class="discord-frame-wrap">
          <iframe
            src="https://discord.com/widget?id=1318693081574543380&theme=dark"
            width="350"
            height="500"
            allowtransparency="true"
            frameborder="0"
            sandbox="allow-popups allow-popups-to-escape-sandbox allow-same-origin allow-scripts"
            loading="lazy"
            title="RainbowVis Discord Widget"
          ></iframe>
        </div>
      </div>

      <!-- âœ… NEW: Twitch embed box under the Discord widget -->
      <div class="neon-card proximity-glow twitch-card" style="margin-top: 1rem;">
        <div class="glow-spot"></div>
        <div class="card-title-row">
          <span class="card-ico" set:html={icon("/icons/twitch.svg","âŒ")}></span>
          <h2 style="margin:0;">Twitch Livestream</h2>
        </div>
        <p style="opacity:.9; margin:.5rem 0 .75rem;">
          Shows live when Iâ€™m streaming.
        </p>

        <div class="discord-frame-wrap">
          <iframe
            id="twitchPlayer"
            width="100%"
            height="220"
            frameborder="0"
            allowfullscreen="true"
            scrolling="no"
            title="Twitch player"
          ></iframe>
        </div>

        <script>
          // Twitch requires parent=your-domain. We set it dynamically so it works on workers.dev AND rainbowvis.space
          const host = window.location.hostname;
          const parent = encodeURIComponent(host);
          const channel = "rainbow_vis";
          const src = `https://player.twitch.tv/?channel=${channel}&parent=${parent}&muted=true`;
          const el = document.getElementById("twitchPlayer");
          if (el) el.src = src;
        </script>
      </div>
    </aside>
  </main>

  <style>
    .card-title-row{
      display:flex;
      align-items:center;
      gap:.6rem;
    }
    .card-title-row h2{ margin:0; }
    .card-ico{
      display:inline-flex;
      width: 34px;
      height: 34px;
      align-items:center;
      justify-content:center;
      border-radius: 12px;
      background: rgba(255,255,255,0.05);
      border: 1px solid rgba(255,255,255,0.08);
      flex: 0 0 auto;
    }
  </style>
</BaseLayout>
