---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE_TITLE, LINKS } from "../consts";
---

<BaseLayout title={`${SITE_TITLE} • Contacts`} description="How to reach RainbowVis.">
  <main class="page-shell">
    <header class="page-head neon-card proximity-glow">
      <div class="glow-spot"></div>
      <h1>Contacts</h1>
      <p>Here’s the best ways to reach me.</p>
    </header>

    <section class="contact-grid" style="margin-top: 1rem;">
      <a class="neon-card proximity-glow contact-card" href={LINKS.discordInvite} target="_blank" rel="noreferrer">
        <div class="glow-spot"></div>
        <img class="contact-icon" src="/icons/discord.svg" alt="" />
        <div><h2>Discord</h2><p>rainbow_vis</p></div>
      </a>

      <div class="neon-card proximity-glow contact-card">
        <div class="glow-spot"></div>
        <img class="contact-icon" src="/icons/about.svg" alt="" />
        <div><h2>VRChat</h2><p>Rainbow_Vis</p></div>
      </div>

      <a class="neon-card proximity-glow contact-card" href="mailto:rainbowvis.co@gmail.com">
        <div class="glow-spot"></div>
        <img class="contact-icon" src="/icons/social.svg" alt="" />
        <div><h2>Gmail</h2><p>rainbowvis.co@gmail.com</p></div>
      </a>

      <a class="neon-card proximity-glow contact-card" href={LINKS.twitter} target="_blank" rel="noreferrer">
        <div class="glow-spot"></div>
        <img class="contact-icon" src="/icons/twitter.svg" alt="" />
        <div><h2>Twitter / X</h2><p>@RainbowVis</p></div>
      </a>

      <a class="neon-card proximity-glow contact-card" href={LINKS.bluesky} target="_blank" rel="noreferrer">
        <div class="glow-spot"></div>
        <img class="contact-icon" src="/icons/bluesky.svg" alt="" />
        <div><h2>Bluesky</h2><p>@rainbowvis.bsky.social</p></div>
      </a>
    </section>
  </main>

  <style>
    .contact-grid{
      max-width: 920px;
      margin: 0 auto;
      display:grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 1rem;
    }
    @media (max-width: 820px){
      .contact-grid{ grid-template-columns: 1fr; }
    }

    .contact-card{
      display:flex;
      gap: .85rem;
      align-items:center;
      text-decoration:none;
    }

    .contact-card h2{
      margin: 0;
      font-size: 1.1rem;
    }
    .contact-card p{
      margin: .15rem 0 0;
      opacity: .9;
    }
    .contact-icon{
      width: 44px;
      height: 44px;
      padding: .6rem;
      border-radius: 14px;
      background: rgba(255,255,255,0.05);
      border: 1px solid rgba(255,255,255,0.10);
      flex: 0 0 auto;
    }
  </style>
</BaseLayout>
