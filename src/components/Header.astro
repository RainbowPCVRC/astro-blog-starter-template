<style>
  .site-header{
    margin:0;
    padding: 0 1rem;
    background: rgba(10, 6, 18, 0.55);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255,255,255,0.08);
  }
  .nav{
    display:flex;
    align-items:center;
    justify-content:space-between;
    gap: 1rem;
  }
  .brand{ margin:0; font-size: 1rem; }
  .brand a{ text-decoration:none; border-bottom:none; }
  .internal-links{
    display:flex;
    flex-wrap:wrap;
    gap: .25rem .5rem;
    align-items:center;
    justify-content:center;
  }
  .social-links{
    display:flex;
    gap: .55rem;
    align-items:center;
  }
  .icon-link{
    display:inline-flex;
    align-items:center;
    justify-content:center;
    padding: .25rem;
    border-radius: 10px;
    border: none;
    text-decoration:none;
  }
  .icon-link:hover{
    background: rgba(255,255,255,0.06);
  }
  @media (max-width: 860px){
    .social-links{ display:none; }
  }
</style>
