---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE_TITLE } from "../consts";

const tosLink = "https://docs.google.com/document/d/1C3_UK_zj8uqMqW30PzZPe3SuW9PgLx-STpQGwHpyFEA/edit?usp=sharing";
const avatarsLink = "https://docs.google.com/document/d/1BTdyo2qLl1mm_pQfx9sHNoN1EShEDTM1CKbwW0IR2E4/edit?usp=sharing";
---

<BaseLayout title={`${SITE_TITLE} • Commissions`} description="Commission info + request form.">
  <main class="page-shell">
    <header class="page-head neon-card proximity-glow">
      <div class="glow-spot"></div>
      <h1>Commissions</h1>
      <p>Request custom work — please include references and details.</p>
      <p style="opacity:.9; margin-top:.55rem;">
        <a class="underline-soft" href={tosLink} target="_blank" rel="noreferrer">Commission TOS</a>
        <span> • </span>
        <a class="underline-soft" href={avatarsLink} target="_blank" rel="noreferrer">Avatars I Own</a>
      </p>
    </header>

    <section class="neon-grid" style="margin-top: 1rem;">
      <article class="neon-card proximity-glow">
        <div class="glow-spot"></div>
        <h2>What I do</h2>
        <ul style="margin:.6rem 0 0; opacity:.95;">
          <li>Artwork / icons / branding graphics</li>
          <li>VRChat retextures / edits</li>
          <li>Showcase pages / product visuals</li>
          <li>Other custom requests (ask!)</li>
        </ul>
      </article>

      <article class="neon-card proximity-glow" style="grid-column: span 2;">
        <div class="glow-spot"></div>
        <h2>Commission Request Form</h2>
        <p style="opacity:.9; margin:.4rem 0 .75rem;">
          Fill this out and I’ll get back to you. Include refs/links if possible.
        </p>

        <form method="POST" action="/api/commission" enctype="multipart/form-data">
          <input class="input" type="text" name="name" placeholder="Name / Handle" required />
          <input class="input" type="email" name="reply_to" placeholder="Email" required />

          <select class="input" name="commission_type" required>
            <option value="" selected disabled>Commission Type (choose one)</option>
            <option>VRChat Retexture</option>
            <option>VRChat Accessory / Clothing Refit</option>
            <option>Icon / Branding Art</option>
            <option>Terraria Mod Asset / Sprite</option>
            <option>Blender / 3D</option>
            <option>Other</option>
          </select>

          <textarea class="textarea" name="details" placeholder="Describe what you want + include links to references" required></textarea>

          <label style="opacity:.9;">
            Upload reference images (optional)
            <input class="input" type="file" name="files" accept="image/*" multiple />
          </label>

          <input type="file" name="files" multiple />

          <button class="button" type="submit">Send Request</button>
        </form>

        <p style="opacity:.8; margin-top:.75rem;">
          Files are included in the email (within reasonable size limits).
        </p>
      </article>
    </section>
  </main>
</BaseLayout>
