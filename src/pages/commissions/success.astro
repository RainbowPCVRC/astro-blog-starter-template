---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';

const next = Astro.url.searchParams.get("next") || "/commissions";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} • Sent!`} description="Commission request sent successfully." />
    <meta http-equiv="refresh" content={`4;url=${next}`} />
  </head>
  <body>
    <Header />

    <main class="page-shell">
      <section class="page-head neon-card proximity-glow">
        <div class="glow-spot"></div>
        <h1>Request Sent!</h1>
        <p>Thank you — your commission request was delivered successfully.</p>
        <p style="opacity:0.85;">Redirecting back in a few seconds…</p>

        <a class="button" href={next} style="margin-top:0.75rem; display:inline-flex;">
          Go back now →
        </a>
      </section>
    </main>

    <Footer />
    <script src="/proximityGlow.js" defer></script>
  </body>
</html>
